<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>Status:</strong>
  <%= @post.status %>
</p>

<h3>Images:</h3>
<% @post.images.each do |image| %>
  <%= image_tag(image) %>
<% end %>

<h3>Files:</h3>
<% @post.files.each do |file| %>
  <%= link_to file.filename, rails_blob_path(file, disposition: "attachment") %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
