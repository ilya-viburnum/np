<div class="bg-white shadow-md rounded-lg overflow-hidden">
  <div class="p-6">
    <div class="flex justify-between items-center mb-2">
      <h2 class="text-xl font-bold text-gray-800"><%= post.title %></h2>
      <p class="text-gray-500 bg-gray-200 px-3 py-2 rounded-full"><%= post.region.name %></p>
    </div>
    <p class="text-gray-700 mb-4"><%= post.body %></p>
    <div class="flex justify-between items-center text-gray-500 text-sm border-t border-gray-200 pt-4 mt-4">
      <p><strong>By:</strong> <%= post.user.full_name %></p>
      <p><strong>Published:</strong> <%= post.published_at&.strftime("%Y-%m-%d %H:%M") %></p>
    </div>
  </div>
</div>