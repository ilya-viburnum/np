<div>
  <% if user_signed_in? %>
    <p><%= t('shared.signed_as', email: current_user.email) %></p>
    <div class="flex justify-center space-x-4">
        <%= link_to t('shared.to_posts'), '#', class: 'bg-blue-500 text-white font-bold py-2 px-4 rounded-full hover:bg-blue-600' %>
        <%= link_to t('shared.sign_out'), destroy_user_session_path, method: :delete, class: "bg-red-600 text-white font-bold py-2 px-4 rounded-full hover:bg-red-500" %>
    </div>
  <% else %>
    <h1 class="text-4xl font-bold text-gray-800 mb-4">
      <%= t('home.welcome') %>
    </h1>
    <p class="text-gray-600 mb-6">
        <%= t('home.continue_actions') %>
    </p>
    <div class="flex justify-center space-x-4">
      <%= link_to t('shared.sign_up'), new_user_registration_path, class: "bg-blue-500 text-white font-bold py-2 px-4 rounded-full hover:bg-blue-600" %>
      <%= link_to t('shared.sign_in'), new_user_session_path, class: "bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-full hover:bg-gray-400" %>
    </div>
  <% end %>
</div>
