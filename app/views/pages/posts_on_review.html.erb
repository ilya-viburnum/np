<div class="container mx-auto p-8">
  <div class="flex items-center justify-between mt-8 mb-6">
    <h2 class="text-2xl font-semibold text-gray-700"><%= t("posts.on_review") %></h2>
  </div>

  <% if @posts.empty? %>
    <p class="text-gray-600 mb-4"><%= t("posts.no_posts") %></p>
  <% else %>
    <%= render "table", posts: @posts %>
  <% end %>
</div>
