<div class="overflow-x-auto">
  <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
    <thead>
    <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
      <th class="py-3 px-6 text-left"><%= t("posts.table_headers.title") %></th>
      <th class="py-3 px-6 text-left"><%= t("posts.table_headers.status") %></th>
      <th class="py-3 px-6 text-center"><%= t("posts.table_headers.actions") %></th>
    </tr>
    </thead>
    <tbody class="text-gray-700 text-sm font-light">
    <% posts.each do |post| %>
      <tr class="border-b border-gray-200 hover:bg-gray-100">
        <td class="py-3 px-6 text-left whitespace-nowrap">
          <span class="font-medium"><%= post.title %></span>
        </td>
        <td class="py-3 px-6 text-left">
          <span class="<%= status_class(post.status) %>"><%= post.status.humanize %></span>
        </td>
        <td class="py-3 px-6 text-center">
          <div class="flex item-center justify-center space-x-2">
            <% case post.status %>
            <% when "draft" %>
              <%= render "dashboards/posts/action_buttons/draft", post: post %>
            <% when "on_review" %>
              <%= render "dashboards/posts/action_buttons/on_review", post: post %>
            <% when "approved" %>
              <%= render "dashboards/posts/action_buttons/approved", post: post %>
            <% when "rejected" %>
              <%= render "dashboards/posts/action_buttons/rejected", post: post %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>